    margin-top: 5px;
    margin-right: 5px;
  }
  /* COLOR INFO FOR TEX-MEX, KOREAN, AND AMERICAN */
  span.tex-mex {
    background: var(--tex-mex-color);
  }

  span.korean {
    background: var(--korean-color);
  }

  span.american {
    background: var(--american-color);
  }
  /* Add style for custom data attributes here */
  li[data-type="tex-mex"] {
    background: var(--tex-mex-color);
  }

  li[data-type="korean"] {
    background: var(--korean-color);
  }

  li[data-type="american"] {
