    list-style: none;
    padding: 0;
  }

  li {
    padding: 5px 10px;
    margin: 5px 0;
    color: white;
    border-radius: 5px;
  }

  .hint {
    margin-right: 30px;
    display: inline-block;
  }

  span.tex-mex,
  span.korean,
  span.american {
    width: 15px;
    height: 15px;
    border-radius: 50%;
    display: inline-block;
